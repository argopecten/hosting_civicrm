/**
 * Implements hook_node_access().
 */
function hosting_civisite_node_access($node, $op, $account) {
  if ($op != 'create' && hosting_feature('client')) {
    // we rely on hosting_client_node_grants() instead of global configuration
    return NULL; //@todo check this return value -> NODE_ACCESS_IGNORE?
  }
  if ($op == 'create' && user_access('create CiviCRM site', $account)) {
    return NODE_ACCESS_ALLOW;
  }
  if ($op == 'update' && user_access('edit CiviCRM site', $account)) {
    return NODE_ACCESS_ALLOW;
  }
  if ($op == 'delete' && user_access('delete CiviCRM site', $account)) {
    return NODE_ACCESS_ALLOW;
  }
  if ($op == 'view' && user_access('view CiviCRM site', $account)) {
    return NODE_ACCESS_ALLOW;
  }
}

