/**
 * Define the classes that correspond to the site status.
 * @see _hosting_civisite_status()
 */
function _hosting_civisite_list_class($node, $verified = NULL) {
  $status = (is_numeric($node)) ? $node : $node->civisite_status;
  $classes = hosting_civisite_status_codes('class');
  if (($status == HOSTING_CIVISITE_ENABLED) && ($verified <= 1)) {
    return 'hosting-warning';
  }

  return $classes[$status];
}

